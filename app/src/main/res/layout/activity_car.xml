<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.nicolas.tripndrivecars.CarActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/car_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#3F51B5"
        android:minHeight="?android:attr/actionBarSize">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/mdtp_white"
            android:text="@string/car_activity_title"
            android:textSize="24sp"/>
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_below="@+id/car_toolbar"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <android.support.v7.widget.CardView
            android:id="@+id/principal_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/layout_photo"
                android:layout_alignParentLeft="true"
                android:layout_margin="4dp"
                android:layout_width="@dimen/car_photo_width"
                android:layout_height="@dimen/car_photo_height">
                <ImageView
                    android:id="@+id/car_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ProgressBar
                    android:id="@+id/loading_progress_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:progressDrawable="@drawable/progress_bar_circle"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/car_category_text"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/layout_photo"
                android:layout_toEndOf="@+id/layout_photo"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="category"/>
            <TextView
                android:id="@+id/car_name_text"
                android:layout_marginTop="4dp"
                android:textSize="14sp"
                android:layout_toRightOf="@+id/layout_photo"
                android:layout_toEndOf="@+id/layout_photo"
                android:layout_below="@+id/car_category_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"/>

            <TextView
                android:id="@+id/car_year_text"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/layout_photo"
                android:layout_toEndOf="@+id/layout_photo"
                android:layout_below="@+id/car_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="year"/>

            <TextView
                android:id="@+id/car_km_text"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/layout_photo"
                android:layout_toEndOf="@+id/layout_photo"
                android:layout_below="@+id/car_year_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kilometers"/>
            </RelativeLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/price_card"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/principal_card">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/price_a_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/a_day"
                android:layout_toRightOf="@+id/price_a_day"
                android:layout_toEndOf="@+id/price_a_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/a_day_text"/>
            </RelativeLayout>

        </android.support.v7.widget.CardView>





        </RelativeLayout>


</RelativeLayout>
